
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Projects Collection
    match /projects/{projectId} {
      // Anyone can view projects
      allow read: if true;
      
      // Only authenticated admins can create, update, or delete projects
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Contact Submissions Collection
    match /contactSubmissions/{submissionId} {
      // Anyone can create a new submission
      allow create: if true;
      
      // Only authenticated admins can read, update (e.g., mark as read), or delete submissions
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Site Statistics Collection
    match /siteStats/{statId} {
        // Anyone can read and update the visitor count.
        // This is necessary for the transaction in incrementVisitorCount to work.
        allow read, write: if true;
    }
  }
}
